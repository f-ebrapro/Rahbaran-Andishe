@model IEnumerable<Rahbaran_Andishe.Models.Slider>

@{
    ViewBag.Title = "لیست اسلایدر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        لیست اسلایدر ها
        <span class="tools pull-left">
            <a class="fa fa-chevron-down" href="javascript:;"></a>
        </span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table">
            <div class="clearfix">
                <div class="btn-group">
                    @Html.ActionLink("افزودن اسلایدر", "Add", "Slider", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
        <div class="space15"></div>
        <table class="table editable-table table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Img)
                    </th>
                    <th>@Html.DisplayName("عملیات")</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
            {
                    <tr><td colspan="8" class="text-center">هیچ آیتمی وجود ندارد</td></tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr class="">
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Img)
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "Slider", new { id = item.Id }))
                                {

                                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                    <button class="btn btn-danger btn-xs" type="submit">
                                        حذف
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>

