@model IEnumerable<WebApplication1.Models.Form>

@{
    ViewBag.Title = "لیست سفارشات    ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="panel">
<header class="panel-heading">
    لیست سفارشات
    <span class="tools pull-left">
        <a class="fa fa-chevron-down" href="javascript:;"></a>
    </span>
</header>
<div class="panel-body">
<div class="space15"></div>
<table class="table editable-table table-hover table-bordered" id="editable-sample">
<thead>
<tr>
    <th>
        @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Family)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Generic)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.CompanyName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.PersonalId)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.NationalCode)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.BirthDay)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.FatherName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ActionField)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Education)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.LandlinePhone)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.FaxNumber)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Email)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.PostalCode)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.phoneNumber)
    </th>
    <th>@Html.DisplayName("عملیات")</th>
</tr>
</thead>
    @if (!Model.Any())
    {
        <tr><td colspan="8" class="text-center">هیچ آیتمی وجود ندارد</td></tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr class="">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Generic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionField)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandlinePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FaxNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>

                <td>
                    @using (Html.BeginForm("Delete", "Admin", new { id = item.Id }))
                    {
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        <button class="btn btn-danger btn-xs" type="submit">
                            حذف
                        </button>
                    }
                </td>
            </tr>
        }
    }

        </table>
    </div>

</section>
    

